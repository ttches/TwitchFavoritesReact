@import 'nib'

nav
  padding 0px
  top 0
  width 100%
  background linear-gradient(left, navLeft, lighten(navRight, 10))
  .nav-container
    margin 0 auto
    width 95%
    max-width 520px
    height 50px
    display flex
    justify-content space-between
    align-items center
    p
      padding-bottom 0px

#addStreamInput
  border #392E5C
  background-color rgba(255, 255, 255, 0.23);
  padding 5px
  padding-left 30px
  color: #898395
  width 130px
  &:focus
    outline none
    box-shadow 0 0 5px purple
  @media screen and (min-width: 350px)
    width: 170px

#addStreamIcon
  color #898395
  absolute top 5px left 5px
